<header style="padding: 20px;" class="flex flex-row justify-between items-center gap-32 bg-gray-950 mx-auto p-10 w-full h-14">
  <a href="/" class="p-2 font-bold text-2xl text-white">Exam GPT</a>
  <nav class="flex flex-row justify-between items-center gap-8 space-x-4 w-1/2">
    <% if (!locals.user) { %>
    <a href="/login" class="p-2 text-white hover:text-gray-200">LogIn</a>
    <a href="/signup" class="p-2 text-white hover:text-gray-200">SignUp</a>
    <% } else { %>
    <form action="/logout" method="POST" class="text-white hover:text-gray-200">
      <button type="submit">Logout</button>
    </form>
    <% } %>
  </nav>
</header>