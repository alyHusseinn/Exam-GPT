<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/head') %>
</head>

<body class="bg-main">
  <%- include('partials/header') %>
  <div class="flex flex-col justify-center items-center content-center gap-8 bg-main px-6 lg:px-8 py-12 w-full min-h-full">
    <h1 class="font-bold text-5xl text-gray-900 leading-9 tracking-tight">All Exams: </h1>
    <div class="flex flex-row flex-wrap justify-center items-center content-center gap-8 px-6 lg:px-8 py-12 w-full min-h-full">
      <% submitions.forEach(submition => { %>
      <div class="flex flex-col justify-center items-center content-center gap-4 border-4 bg-secondary hover:shadow-2xl px-6 lg:px-8 py-12 border-text border-solid rounded-xl w-96 min-h-full hover:cursor-pointer">
        <h2 class="topic text-3xl">Student: <%= submition.student.firstName + ' ' + submition.student.lastName %></h2>
          <h2 class="text-2xl name">Topic: <%= submition.exam.topic %></h2>
          <img src="<%= submition.student.avatar %>" alt="" class="rounded-xl w-40 h-40">
        <a href="<%= 'oralexam/' + submition._id %>" class="bg-black p-4 rounded-3xl w-full font-bold text-3xl text-center text-white hover:text-gray-200">Start Correction</a>
      </div>
      <% }) %>
    </div>
  </div>
</body>

</html>