<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body class="bg-main">
    <%- include('partials/header') %>
    <div
      class="flex flex-col justify-center items-center content-center gap-16 bg-main px-6 lg:px-8 py-12 w-full min-h-full"
    >
    <h1 class="font-bold text-5xl text-gray-900 leading-9 tracking-tight">
        All Students
      </h1>
      <div class="flex flex-row flex-wrap justify-center items-center gap-8 w-full text-text teachers-list">
        <% locals.students.forEach(function(student){ %>
        <a href="<%= student.url %>" class="flex flex-col justify-between items-center gap-4 border-4 bg-secondary hover:shadow-2xl p-4 border-text border-solid rounded-lg w-96 font-bold">
          <img src="<%= student.avatar %>" alt="avatar" class="rounded-xl w-full"> 
          <h2 class="text-3xl"><%= student.fullName %></h2>
        </a>
        <% }) %> 
      </div> 
    </div>
</body>
</html>